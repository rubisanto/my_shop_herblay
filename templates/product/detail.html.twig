{% extends 'base.html.twig' %}

{% block title %}
	Mes produits
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-4">
			<img src="/uploads/{{product.picture}}" alt="{{product.name}}" class="img-fluid">
		</div>


		<div clas=="col-md-8">

			<h3>{{product.name}}</h3>
			<p>{{product.subtitle}}</p>
			{# Préciser le format de l'affichage du prix  #}
			<span class="product-price">{{(product.price / 100)|number_format(2,',', '.')}}
				€</span>
			<hr>
			<p>{{product.description}}</p>
			<a href="" class="btn btn-primary">Ajouter au panier</a>
		</div>
	</div>


{% endblock %}
