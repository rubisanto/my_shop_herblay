{% extends 'base.html.twig' %}

{% block title %}Hello AddressController!
{% endblock %}

{% block content %}
	<h1>Mes adresses</h1>

	{{form_start(form)}}
	<div class="row">
		<div class="col">
			{{form_row(form.firstname)  }}
		</div>

		<div class="col">

			{{form_row(form.lastname)  }}</div>


	</div>
	<div class="row">
		<div class="col">
			{{form_row(form.company)  }}
		</div>

		<div class="col">

			{{form_row(form.address)  }}</div>


	</div>

	<div class="row">
		<div class="col">
			{{form_row(form.postal)  }}
		</div>

		<div class="col">

			{{form_row(form.city)  }}</div>


	</div>

	<div class="row">
		<div class="col">
			{{form_row(form.country)  }}
		</div>

		<div class="col">

			{{form_row(form.phone)  }}</div>


	</div>
{% endblock %}
